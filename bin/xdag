xdir=`dirname $0`

if [ "$1" == "-h" ] || [ "$1" == "--help" ]; then
	cat << EOH
xdag

print the system's hostname & DAG suitable for including in etc/hosts.xia

options:
  -h, --help    display this help
  -v, --version display the version number
EOH
	exit 0
elif [ "$1" == "-v" ] || [ "$1" == "--version" ]; then
	echo "xdag 2.0"
	exit 0
fi

# print DAG mappings suitable for inclusion in hosts.xia
XIDs=$($xdir/xroute -v | grep "(self)" | grep -e '^\(\(AD\)\|\(HID\)\) ' \
			| sort | tr -s ' ' '\t' | cut -f 2 | paste -s -d' ')
if [ "${#XIDs}" != 88 ]; then
	exit 1
fi
echo "$(hostname -s) RE $XIDs"
